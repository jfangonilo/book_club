<% @books.each do |book| %>
  <section id="book-<%= book.id %>">
    <h4><%= book.title %></h4>
    <p><%= book.publication_year %></p>
    <p><%= book.pages %></p>
    <p><% book.authors.each do |author| %>
      <%= link_to author.name, "/authors/#{author.id}" %>
    <% end %></p>
  </section><br>
<% end %>
